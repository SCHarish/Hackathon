<body>
    

    <div id="ui-preview">
        <h1>Aravind Eye Hospital</h1>
        <div  class="signout" style="background:none">© 2016 powered by Honeywell</div>
        <div class="row col-sm-12" style="margin:160px 0 0">
            <div class="col-sm-6" style="text-align:right">
                <a href="@Url.Action("Form","Form")"><img src="~/Pictures/new_user.png" /></a>
            </div>

            <div class="col-sm-6" style="text-align:left">
                <a href="@Url.Action("qrscan","Home")"><img src="~/Pictures/existing_user.png" /></a>
            </div>

        </div>
        <div id="registrationcount" style="position:absolute; bottom:0; right: 0; padding:10px;"></div>
    </div>

        
    <script>
        $(document).ready(function () {
            var noofregistration = "@Html.Raw(HttpUtility.JavaScriptStringEncode(noofregistrations))";
            $.ajax({
                url: noofregistration,
                crossOrgin: true, // use jsonp for cross origin request
                dataType: 'json',
                type: 'GET',
                success: function (data) {
                    
                    document.getElementById("registrationcount").innerHTML = "Total New Registration done today is " + data;
                    
                   
                }, error: function () {

                }
            });
        

            $("#d1").click(function () {
                var url = '@Url.Action("form", "Form")';
                window.location.href = url;
            });
            $("#d2").click(function () {
                var url = '@Url.Action("qrscan", "Home")';
                window.location.href = url;
            });
        });

    </script>

